USAGE:            
  -d  destination 
  -t  text        
  -a  user-agent  
  -bg background  
  -fg foreground  
  -r  repeats     
  -v  verbose     

EXAMPLES:         
  ./graffiti.pl -d www.example.com -t "funny text"
  ./graffiti.pl -v -d localhost -t "testing graffiti" -r 2
  ./graffiti.pl -d 1.2.3.4 -t "last example" -bg . -fg "#" -a "Mozilla\ Firefox"

